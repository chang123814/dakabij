<view class="notes-page">
  <!-- 顶部筛选卡片：搜索 + 新建按钮 -->
  <view class="notes-filters">
    <view class="search-bar">
      <input class="search-input"
             value="{{keyword}}"
             bindinput="handleSearchInput"
             placeholder="搜索笔记，如：创作灵感..." />
      <button class="search-btn" bindtap="handleSearch">搜索</button>
    </view>

    <view class="toolbar">
      <button class="add-note-btn" bindtap="handleAddNote">＋ 新建笔记</button>
    </view>
  </view>

  <!-- 笔记列表卡片 -->
  <scroll-view class="note-list" scroll-y="true">
    <view class="note-item" wx:for="{{notes}}" wx:key="id" bindtap="handleNoteTap" data-id="{{item.id}}">
      <view class="note-header">
        <text class="note-title">{{item.title}}</text>
        <text class="note-time">{{item.createdAtText}}</text>
      </view>
      <text class="note-content">{{item.shortContent}}</text>
    </view>

    <view wx:if="{{!loading && !notes.length}}" class="empty-text">暂无笔记，点击上方“新建笔记”开始记录吧～</view>
    <view wx:if="{{loading}}" class="loading-text">加载中...</view>
  </scroll-view>
</view>
