.notes-page {
  min-height: 100vh;
  background-color: #f5f6f7;
  padding-bottom: 140rpx; /* 预留自定义 tabBar 高度 */
}

/* 顶部筛选卡片 */
.notes-filters {
  margin: 16rpx 24rpx 12rpx;
  padding: 16rpx 16rpx 12rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.search-bar {
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 36rpx;
  background-color: #f5f6f7;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 16rpx;
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background-color: #18c2b8;
  color: #fff;
  font-size: 28rpx;
}

.toolbar {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.add-note-btn {
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  background-color: #18c2b8;
  color: #fff;
  font-size: 26rpx;
}

/* 笔记列表区域 */
.note-list {
  max-height: calc(100vh - 260rpx);
  padding: 0 24rpx 32rpx;
}

.note-item {
  padding: 24rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.note-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.note-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.note-time {
  font-size: 24rpx;
  color: #999;
}

.note-content {
  font-size: 28rpx;
  color: #666;
}

.empty-text,
.loading-text {
  text-align: center;
  color: #999;
  margin-top: 80rpx;
}
