.habit-detail-page {
  padding: 24rpx;
}

.habit-summary {
  margin-bottom: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
}

.habit-name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.habit-desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #666666;
}

.habit-meta {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
}

.meta-item {
  font-size: 24rpx;
  color: #999999;
}

.check-in-form {
  margin-top: 16rpx;
  padding: 20rpx 24rpx 32rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #666666;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 40rpx;
  color: #dddddd;
  margin-right: 8rpx;
}

.star.active {
  color: #FFD93D;
}

.input {
  min-height: 72rpx;
  padding: 0 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.textarea {
  min-height: 160rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  background-color: #18c2b8;
  color: #ffffff;
  font-size: 30rpx;
}


.loading-text {
  margin-top: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}
