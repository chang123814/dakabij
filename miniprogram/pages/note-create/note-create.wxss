.note-create-page {
  min-height: 100vh;
  background-color: #f5f6f7;
  padding: 32rpx 24rpx 140rpx;
}

.form-card {
  padding: 24rpx 24rpx 32rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 12rpx;
  background-color: #f5f6f7;
  font-size: 28rpx;
}

.textarea {
  min-height: 300rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  background-color: #f5f6f7;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #18c2b8;
  color: #fff;
  font-size: 30rpx;
}
