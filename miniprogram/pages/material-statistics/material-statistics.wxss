.material-statistics-page {
  padding: 24rpx;
}

.summary-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.summary-row .label {
  font-size: 26rpx;
  color: #666666;
}

.summary-row .value {
  font-size: 26rpx;
  color: #333333;
}

.empty-text {
  text-align: center;
  color: #999999;
  margin-top: 80rpx;
  font-size: 26rpx;
}

.section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.type-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
}

.type-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type-label {
  font-size: 26rpx;
  color: #333333;
}

.type-value {
  font-size: 24rpx;
  color: #666666;
}

.type-bar-wrapper {
  margin-top: 10rpx;
  background-color: #f5f5f5;
  border-radius: 999rpx;
  overflow: hidden;
}

.type-bar {
  height: 12rpx;
  border-radius: 999rpx;
  background-color: #2E7D32;
}

.tag-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
}

.tag-row {
  display: flex;
  justify-content: space-between;
}

.tag-name {
  font-size: 26rpx;
  color: #333333;
}

.tag-count {
  font-size: 24rpx;
  color: #666666;
}

.material-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
}

.material-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.material-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.material-type {
  font-size: 22rpx;
  color: #999999;
}

.material-time {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}
