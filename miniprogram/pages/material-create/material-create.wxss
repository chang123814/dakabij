.material-create-page {
  padding: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #666666;
}

.picker,
.input {
  min-height: 72rpx;
  padding: 0 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.textarea {
  min-height: 200rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  font-size: 28rpx;
}

.image-upload {
  display: flex;
  align-items: center;
}

.upload-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 32rpx;
  border-radius: 36rpx;
  background-color: #2E7D32;
  color: #ffffff;
  font-size: 26rpx;
}

.preview-image {
  margin-top: 16rpx;
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
}

.tags-input {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 8rpx 8rpx 0;
  border-radius: 16rpx;
  background-color: #f5f5f5;
}

.tag {
  display: flex;
  align-items: center;
  padding: 4rpx 12rpx;
  margin: 0 8rpx 8rpx 0;
  border-radius: 999rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  color: #666666;
}

.tag .remove {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #cccccc;
}

.tag-input {
  flex: 1;
  min-width: 200rpx;
  height: 56rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
}

.suggested-tags {
  margin-top: 12rpx;
}

.suggested-label {
  display: block;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.suggested-list {
  display: flex;
  flex-wrap: wrap;
}

.suggested-tag {
  padding: 4rpx 14rpx;
  margin: 0 8rpx 8rpx 0;
  border-radius: 999rpx;
  border: 1px solid #dddddd;
  font-size: 24rpx;
  color: #666666;
}

.suggested-tag.active {
  border-color: #2E7D32;
  background-color: #E8F5E9;
  color: #2E7D32;
}

.submit-btn {
  margin-top: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  background-color: #2E7D32;
  color: #ffffff;
  font-size: 30rpx;
  text-align: center;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.16);
}
