/* pages/habits/habits.wxss */

.header {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-date {
  font-size: 26rpx;
  color: #999;
}

.btn-add {
  background: #4CAF50;
  color: #fff;
  border: none;
}

.habits-list {
  padding: 0 30rpx;
}

.habit-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.habit-icon {
  width: 100rpx;
  height: 100rpx;
  background: #f5f5f5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.icon {
  font-size: 48rpx;
}

.habit-info {
  flex: 1;
}

.habit-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.habit-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.habit-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4CAF50;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-dot.inactive {
  background: #999;
}

.status-text {
  font-size: 24rpx;
  color: #999;
}

.habit-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.habit-stats {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
}

.habit-action {
  margin-left: 20rpx;
}

.btn-check-in {
  background: #4CAF50;
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.checked {
  width: 60rpx;
  height: 60rpx;
  background: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checked-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}
