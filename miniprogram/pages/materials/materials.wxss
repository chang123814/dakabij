.materials-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f6f7; /* 页面浅灰底 */
}

/* 顶部筛选区域：白色卡片容器 */
.filters-wrapper {
  margin: 16rpx 24rpx 12rpx;
  padding: 16rpx 16rpx 12rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  padding: 12rpx 8rpx 8rpx;
  background-color: transparent;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 64rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  background-color: #f5f6f7;
  font-size: 26rpx;
  color: #333333;
}

.search-btn {
  margin-left: 16rpx;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  background-color: #18c2b8; /* 主色按钮 */
  color: #ffffff;
  font-size: 26rpx;
}

/* 类型筛选 Tag */
.filter-bar {
  white-space: nowrap;
  padding: 12rpx 8rpx 4rpx;
  background-color: transparent;
}

.filter-item {
  display: inline-block;
  padding: 8rpx 24rpx;
  margin-right: 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #666666;
  background-color: #f5f5f5;
}

.filter-item.active {
  color: #ffffff;
  background-color: #18c2b8; /* 主色块 */
  font-weight: 600;
}

/* 标签筛选 Tag */
.tag-filter-bar {
  white-space: nowrap;
  padding: 8rpx 8rpx 12rpx;
  background-color: transparent;
}

.tag-filter-item {
  display: inline-block;
  padding: 6rpx 20rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #666666;
  background-color: #f5f5f5;
}

.tag-filter-item.active {
  color: #0da398;          /* 深一点的主色文字 */
  background-color: #d9f3f1; /* 浅主色底 */
  font-weight: 600;
}

/* 顶部工具栏按钮 */
.materials-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 8rpx 0;
  background-color: transparent;
}

.toolbar-left {
  display: flex;
  align-items: center;
}

/* 标签管理：描边按钮 */
.toolbar-manage-tags-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 24rpx;
  margin-right: 12rpx;
  border-radius: 999rpx;
  border: 1rpx solid #0da398;
  background-color: #ffffff;
  color: #0da398;
  font-size: 26rpx;
  white-space: nowrap;
}

/* 模板库 / 只看收藏：浅色胶囊，激活时主色填充 */
.toolbar-template-filter,
.toolbar-favorite-filter {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
  color: #333333;
  font-size: 26rpx;
  white-space: nowrap;
  margin-right: 12rpx;
}

.toolbar-template-filter.active,
.toolbar-favorite-filter.active {
  background-color: #18c2b8;
  color: #ffffff;
}

/* 右侧主按钮：添加素材 */
.toolbar-add-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 72rpx;
  padding: 0 36rpx;
  border-radius: 999rpx;
  background-color: #18c2b8;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 24rpx rgba(24, 194, 184, 0.32);
  white-space: nowrap;
}

/* 瀑布流列表区域 */
.materials-list {
  flex: 1;
}

.waterfall-container {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 24rpx 32rpx;
}

.waterfall-column {
  flex: 1;
}

.waterfall-column:first-child {
  margin-right: 16rpx;
}

/* 素材卡片：白底 + 大圆角 + 轻阴影 */
.material-card {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.material-image {
  width: 100%;
  height: 260rpx;
  background-color: #f0f0f0;
}

.material-info {
  padding: 20rpx 24rpx 24rpx;
}

.material-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.material-content {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
  max-height: 72rpx;
  overflow: hidden;
}

.material-tags {
  margin-top: 8rpx;
}

.tag {
  display: inline-block;
  margin-right: 8rpx;
  margin-top: 8rpx;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
  font-size: 22rpx;
  color: #666666;
}

.material-footer {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.material-type {
  font-size: 22rpx;
  color: #999999;
}

.material-favorite {
  font-size: 32rpx;
  color: #cccccc;
}

.material-favorite.active {
  color: #ff6b6b;
}

/* 状态文案 */
.loading-text,
.empty-text,
.no-more-text {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding: 16rpx 0 32rpx;
}
