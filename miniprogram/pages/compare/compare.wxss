.compare-page {
  padding: 16rpx;
}

.summary-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.date-picker-row {
  margin-bottom: 16rpx;
}

.date-group {
  margin-bottom: 12rpx;
}

.date-group-label {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  display: block;
}

.date-row {
  display: flex;
  align-items: center;
}

.date-picker {
  min-width: 200rpx;
  padding: 12rpx 16rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
}

.date-separator {
  margin: 0 12rpx;
  font-size: 24rpx;
  color: #666666;
}

.apply-row {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 12rpx;
}

.apply-btn {
  padding: 0 24rpx;
}

.period-row {
  display: flex;
  gap: 16rpx;
}

.period-block {
  flex: 1;
  border-radius: 12rpx;
  padding: 16rpx;
  background-color: #f7f8fa;
}

.period-block.current {
  border: 2rpx solid #4caf50;
}

.period-block.previous {
  border: 2rpx solid #90a4ae;
}

.period-label {
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.period-date {
  font-size: 22rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.metric-label {
  font-size: 24rpx;
  color: #666666;
}

.metric-value {
  font-size: 24rpx;
  font-weight: 600;
}

.growth-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.growth-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.growth-label {
  font-size: 24rpx;
  color: #666666;
}

.growth-value {
  font-size: 24rpx;
  font-weight: 600;
}

.growth-value.positive {
  color: #4caf50;
}

.growth-value.negative {
  color: #f44336;
}

.empty-text {
  margin-top: 80rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

