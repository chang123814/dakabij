.material-categories-page {
  padding: 24rpx;
  background-color: #E8F5E9; /* 浅绿色背景 */
}


.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.add-btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 24rpx;
  border-radius: 999rpx;
  background-color: #2E7D32; /* 深绿色，提升对比度 */
  color: #ffffff;
  font-size: 26rpx;
}

.category-list {
  background-color: #ffffff;
  border-radius: 16rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1px solid #f0f0f0;
}

.category-item:last-child {
  border-bottom: none;
}

.category-name {
  font-size: 28rpx;
  color: #333333;
}

.category-actions {
  display: flex;
  align-items: center;
}

.category-actions .action-btn {
  margin-left: 12rpx;
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  border-radius: 999rpx;
}

/* 编辑按钮：边框+文字用主题色，白底 */
.category-actions .edit-btn {
  background-color: #ffffff;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

/* 删除按钮：实心红色，更显眼 */
.category-actions .delete-btn {
  background-color: #ffecec;
  color: var(--secondary-color);
  border: 1px solid var(--secondary-color);
}


.empty-text,
.loading-text {
  margin-top: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}
