.statistics-page {
  padding: 24rpx;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #888888;
}

.card-list {
  margin-top: 8rpx;
}

.stat-card {
  margin-bottom: 20rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-left {
  flex: 1;
}

.card-title {
  font-size: 28rpx;
  color: #333333;
}

.card-desc {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #888888;
}

.card-right {
  margin-left: 16rpx;
}

.card-link {
  font-size: 24rpx;
  color: #18c2b8;
}

