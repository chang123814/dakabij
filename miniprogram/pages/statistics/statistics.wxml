<view class="statistics-page">
  <view class="header">
    <text class="title">统计概览</text>
    <text class="subtitle">看看近期打卡表现</text>
  </view>

  <view class="card-list">
    <view class="stat-card" bindtap="handleNavigateAchievement">
      <view class="card-left">
        <text class="card-title">达成率统计</text>
        <text class="card-desc">查看各个习惯的目标完成情况</text>
      </view>
      <view class="card-right">
        <text class="card-link">进入</text>
      </view>
    </view>

    <view class="stat-card" bindtap="handleNavigateEfficiency">
      <view class="card-left">
        <text class="card-title">效率分析</text>
        <text class="card-desc">查看平均耗时、满意度和最高效时段</text>
      </view>
      <view class="card-right">
        <text class="card-link">进入</text>
      </view>
    </view>

    <view class="stat-card" bindtap="handleNavigateMaterialStatistics">
      <view class="card-left">
        <text class="card-title">素材统计</text>
        <text class="card-desc">查看素材类型分布和高频标签</text>
      </view>
      <view class="card-right">
        <text class="card-link">进入</text>
      </view>
    </view>

    <view class="stat-card" bindtap="handleNavigateCompare">
      <view class="card-left">
        <text class="card-title">对比分析</text>
        <text class="card-desc">对比两个时间区间的打卡表现</text>
      </view>
      <view class="card-right">
        <text class="card-link">进入</text>
      </view>
    </view>

    <view class="stat-card" bindtap="handleNavigateTrend">
      <view class="card-left">
        <text class="card-title">趋势分析</text>
        <text class="card-desc">查看最近一段时间的打卡趋势</text>
      </view>
      <view class="card-right">
        <text class="card-link">进入</text>
      </view>
    </view>
  </view>
</view>



