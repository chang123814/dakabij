.profile-page {
  min-height: 100vh;
  background-color: #f5f6f7;
  padding-bottom: 140rpx; /* 预留自定义 tabBar 高度 */
}

/* 顶部个人信息 */
.profile-hero {
  padding: 40rpx 32rpx 80rpx;
  background-color: #18c2b8;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-large-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 56rpx;
  color: #ffffff;
}

.profile-name {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.profile-id {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.profile-hero-btn {
  margin-top: 20rpx;
  padding: 0 40rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.profile-hero-btn.primary {
  background-color: #ffffff;
  color: #18c2b8;
}

.profile-hero-btn.secondary {
  background-color: transparent;
  color: #ffffff;
  border: 1rpx solid #ffffff;
}

/* VIP 卡片 */
.vip-card {
  margin: -50rpx 32rpx 24rpx;
  padding: 24rpx 24rpx 20rpx;
  border-radius: 24rpx;
  background-color: #222222;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.vip-left {
  flex: 1;
}

.vip-title {
  font-size: 30rpx;
  font-weight: 600;
}

.vip-desc {
  display: block;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #dddddd;
}

.vip-upgrade-btn {
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  background-color: #f0c986;
  color: #333333;
  font-size: 24rpx;
}

/* 菜单列表 */
.menu-section {
  margin: 0 32rpx 24rpx;
}

.menu-list {
  border-radius: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.menu-item {
  text-align: left;
  padding: 0 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 0;
  border-bottom: 1rpx solid #f0f0f0;
  background-color: #ffffff;
  font-size: 28rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

/* 底部关注条 */
.follow-banner {
  margin: 16rpx 32rpx 12rpx;
  padding: 16rpx 20rpx;
  border-radius: 999rpx;
  background-color: #d9f3f1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.follow-left {
  display: flex;
  flex-direction: column;
}

.follow-title {
  font-size: 26rpx;
  color: #333333;
}

.follow-sub {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #666666;
}

.follow-btn {
  padding: 0 32rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 999rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  color: #18c2b8;
}

.version-text {
  text-align: center;
  font-size: 22rpx;
  color: #bbbbbb;
  margin-bottom: 24rpx;
}
