<view class="profile-page">
  <!-- 顶部个人信息区域 -->
  <view class="profile-hero">
    <view class="avatar-large-wrapper">
      <image wx:if="{{hasUserInfo && userInfo.avatarUrl}}" class="avatar-img" src="{{userInfo.avatarUrl}}" mode="aspectFill" lazy-load="true" />
      <view wx:else class="avatar-placeholder">我</view>
    </view>
    <text class="profile-name">{{hasUserInfo ? userInfo.nickName : '未登录'}}</text>
    <text class="profile-id">{{hasUserInfo ? '已登录，数据已同步到云端' : '登录后可同步习惯与素材数据'}}</text>

    <button wx:if="{{!hasUserInfo}}" class="profile-hero-btn primary" size="mini" bindtap="handleGetUserProfile">微信一键登录</button>
    <button wx:else class="profile-hero-btn secondary" size="mini" bindtap="handleRelogin">重新登录</button>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-section">
    <view class="menu-list">
      <button class="menu-item" bindtap="handleGoNotes">我的笔记</button>
      <button class="menu-item" bindtap="handleGoMaterials">我的素材</button>
      <button class="menu-item" bindtap="handleShareApp">分享小程序</button>
      <button class="menu-item" bindtap="handleContactService">联系客服</button>
      <button class="menu-item" bindtap="handleFeedback">意见反馈</button>
      <button class="menu-item" bindtap="handleHistory">历史记录</button>
      <button class="menu-item" bindtap="handleOpenSettings">设置</button>
    </view>
  </view>

  <view class="version-text">v2.0.0  Copyright © 2024 习惯日记</view>
</view>
