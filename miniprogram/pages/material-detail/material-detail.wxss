.material-detail-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.material-image {
  width: 100%;
  height: 360rpx;
  background-color: #eaeaea;
}

.material-header {
  padding: 24rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.material-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 600;
  flex: 1;
}

.material-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

.action-btn.delete {
  color: #ff4d4f;
}


.material-info {
  margin-top: 12rpx;
  padding: 0 24rpx 16rpx;
  background-color: #ffffff;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999999;
}

.value {
  font-size: 24rpx;
  color: #666666;
}

.material-tags {
  margin-top: 12rpx;
  padding: 0 24rpx 16rpx;
  background-color: #ffffff;
}

.tag {
  display: inline-block;
  margin-right: 8rpx;
  margin-top: 8rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background-color: #f5f5f5;
  font-size: 22rpx;
  color: #666666;
}

.material-content {
  margin-top: 12rpx;
  padding: 24rpx;
  background-color: #ffffff;
}

.content-text {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.6;
}

.quick-actions {
  margin-top: 12rpx;
  padding: 12rpx 24rpx;
  background-color: #ffffff;
  display: flex;
  gap: 16rpx;
}

.quick-btn {
  flex: 1;
  font-size: 24rpx;
}

.material-footer {

  margin-top: 12rpx;
  padding: 16rpx 24rpx 24rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-count {
  font-size: 24rpx;
  color: #999999;
}

.favorite-btn {
  padding: 10rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  background-color: #ff6b6b;
  color: #ffffff;
}

.favorite-btn.active {
  background-color: #ffd2d2;
  color: #ff3b30;
}

.empty-text,
.loading-text {
  padding: 80rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}
