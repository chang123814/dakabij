/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  font-size: 28rpx;
  color: #333;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: #4CAF50;
  color: #fff;
}

.btn-primary:active {
  background: #45a049;
}

.btn-secondary {
  background: #fff;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}

.btn-danger {
  background: #f44336;
  color: #fff;
}

.btn-block {
  width: 100%;
  display: block;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  color: #666;
  font-size: 26rpx;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.input-field:focus {
  border-color: #4CAF50;
}

/* 文本样式 */
.text-primary {
  color: #4CAF50;
}

.text-secondary {
  color: #999;
}

.text-danger {
  color: #f44336;
}

.text-muted {
  color: #ccc;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.tag-success {
  background: #e8f5e9;
  color: #4CAF50;
}

.tag-info {
  background: #e3f2fd;
  color: #2196F3;
}

.tag-warning {
  background: #fff3e0;
  color: #FF9800;
}

.tag-danger {
  background: #ffebee;
  color: #f44336;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e0e0e0;
  margin: 30rpx 0;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar-lg {
  width: 120rpx;
  height: 120rpx;
}

.avatar-sm {
  width: 60rpx;
  height: 60rpx;
}

/* 徽章 */
.badge {
  display: inline-block;
  min-width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 10rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  background: #f44336;
}
