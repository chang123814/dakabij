page {
  background-color: #f5f6f7; /* 页面浅灰底，对齐参考UI */
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

view, text {
  box-sizing: border-box;
}

/* 统一设计色板：对齐参考文案生成器UI */
:root {
  /* 主色：顶部栏、主按钮、激活 Tab、重要按钮 */
  --primary-color: #18c2b8;
  /* 主色加深：按钮按下、描边、文字高亮 */
  --primary-color-dark: #0da398;
  /* 主色浅色：提示条、Tag 选中浅底 */
  --primary-color-soft: #d9f3f1;

  /* 兼容原有变量命名 */
  --secondary-color: #FF6B6B;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-light: #999999;

  /* 背景与边框 */
  --bg-page: #f5f6f7;
  --bg-card: #ffffff;
  --border-light: #e6e7eb;

  /* VIP 金色（个人中心等地方可用） */
  --vip-color: #f0c986;
  --vip-color-dark: #d9a84c;
}

